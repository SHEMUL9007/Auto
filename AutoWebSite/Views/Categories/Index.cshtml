@model IEnumerable<BusinessLogicLayer.CategorieBLL>

@{
    ViewBag.Title = "Categorie";
    int PageNumber = ViewBag.PageNumber;
    int PageSize = ViewBag.PageSize;
    int TotalCount = ViewBag.TotalCount;
    int TotalPageButtonCount = ((0 == TotalCount % PageSize) ? 0 : 1) + TotalCount / PageSize;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{
    for (int i = 0; i < TotalPageButtonCount; i++)
    {
        string classstring = (i == PageNumber) ? "btn btn-sm btn-success glyphicon glyphicon-star-empty" : "btn btn-sm btn-normal glyphicon glyphicon-asterisk";
        @Html.ActionLink($"-Page {i}-", "Page", new { PageNumber = i, PageSize = PageSize },
       new { @class = classstring });

    }
}
<p>
   
</p>
<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategorieID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorie)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategorieID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.CategorieID }) |
                @Html.ActionLink("Details", "Details", new {  id=item.CategorieID  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.CategorieID  })
            </td>
        </tr>
    }

</table>

   
   
   
       

        
    

